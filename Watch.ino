void setup(){
  pinMode(SDA_PIN,OUTPUT);
  pinMode(SCL_PIN,OUTPUT);
  pinMode(RESET_PIN,OUTPUT);
  TinyWireM.begin();                    // initialize I2C lib

  digitalWrite(RESET_PIN, HIGH);
  // VDD (3.3V) goes high at start, lets just chill for a ms
  delay(1);
  // bring reset low
  digitalWrite(RESET_PIN, LOW);
  // wait 10ms
  delay(10);
  // bring out of reset
  digitalWrite(RESET_PIN, HIGH);
  delay (3000);
  display_buffer();
}


void loop(){
}


void display_buffer(){
  TinyWireM.beginTransmission(SSD1306_ADDR);
  for (int i = 0; i < SSD1306_HEIGHT * SSD1306_WIDTH / 8; i++) {
    TinyWireM.send(buffer[i]);
  }
  TinyWireM.endTransmission();          // Send to the slave
}

// zero the display buffer
void clear_buffer(){
  for (int i = 0; i < SSD1306_HEIGHT * SSD1306_WIDTH / 8; i++)
    buffer[i] = 0;
}

void Blink(){
    digitalWrite(RESET_PIN,HIGH);
    delay (400);
    digitalWrite(RESET_PIN,LOW);
    delay (175);
}

